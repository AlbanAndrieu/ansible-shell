# {{ ansible_managed }}

{# Set up machine #}
{% for machine in shell_git %}
[user]
{% if machine.shell_git_email is defined %}
	email = {{ machine.shell_git_email }}
{% endif %}
{% if machine.shell_git_name is defined %}
	name = {{ machine.shell_git_name }}
{% endif %}
[core]
#	autocrlf = input
{% if machine.shell_git_editor is defined %}
	editor = {{ machine.shell_git_editor }}
{% endif %}
[credential]
	helper = cache --timeout=86400
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	pl = pull â€”rebase
	di = diff --ignore-space-at-eol -b -w
	lo = log --graph
	unstage = reset HEAD --
	last = log -1 HEAD
[help]
	autocorrect = 1
[color]
	ui = auto
#[branch "master"]
#	rebase = true
#[branch]
#	autosetuprebase = always
{% if machine.shell_git_meld_enabled %}
[merge]
    tool = meld
[mergetool "meld"]
    # Choose one of these 2 lines (not both!) explained below.
    #cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[diff]
#	external = /usr/local/bin/git-diff.sh    
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"	
{% endif %}
[maven-scm]
    maildomain = free.fr
    forceUsername = true	
[http]
    sslverify = false
{% endfor %}
